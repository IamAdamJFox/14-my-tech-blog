<div class="container mt-5">
  <!-- Heading for the new blog post contribution section -->
  <h2 class="mb-4">Create a Blog Contribution.</h2>
  
  <!-- Form for creating a new blog post -->
  <form class="new-post-form">
    <!-- Input field for the blog post title -->
    <div class="mb-3">
      <!-- Label for the title input field -->
      <label for="title-new-post" class="form-label">Title:</label>
      <!-- Input field to enter the blog post title -->
      <input
        type="text"
        class="form-control"
        id="title-new-post"
        placeholder="Enter a title of your choice"
      />
    </div>
    
    <!-- Textarea field for the blog post content -->
    <div class="mb-3">
      <!-- Label for the content textarea field -->
      <label for="content-new-post" class="form-label">Content:</label>
      <!-- Textarea to enter the blog post content -->
      <textarea
        class="form-control"
        id="content-new-post"
        rows="5"
        placeholder="Enter content here"
      ></textarea>
    </div>
    
    <!-- Button to submit the new blog post data -->
    <div class="mb-3">
      <button type="submit" class="btn btn-primary">Create Post</button>
    </div>
  </form>
</div>

