<main class="container mt-5">
  <!-- The main content of the page starts here -->

  <!-- Display the title of the blog post -->
  <article>
    <h1>{{title}}</h1>

    <!-- Display information about the blog post's creator and creation date -->
    <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>

    <!-- Display the content of the blog post -->
    <p>{{content}}</p>
  </article>

  <!-- Check if the user is logged in to display the comment form -->
  {{#if logged_in}}
    <!-- Comment form for adding new comments -->
    <form class="new-comment-form" class="mb-3">
      <div class="mb-3">
        <label for="comment" class="form-label">Add Comment:</label>
        <textarea
          class="form-control"
          id="content-new-comment"
          rows="3"
          placeholder="Add a comment..."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  {{/if}}

  <!-- Heading for the comment history section -->
  <h2>Comment History:</h2>

  <!-- Loop through each comment in the 'comments' collection -->
  {{#each comments}}
    <!-- Display each comment along with its creator and creation date -->
    <div class="comment mb-3">
      <p>{{comment_text}}</p>
      <p>By {{user.username}} on {{format_date createdAt}}</p>
    </div>
  {{/each}}
</main>

